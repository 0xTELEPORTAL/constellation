    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'platform'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=platform",
                    "--package=platform",
                    "--manifest-path=platform/Cargo.toml"
                ],
                "filter": {
                    "name": "platform",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/platform"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'platform'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=platform",
                    "--package=platform",
                    "--manifest-path=platform/Cargo.toml"
                ],
                "filter": {
                    "name": "platform",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/platform"
        }
    ]
}